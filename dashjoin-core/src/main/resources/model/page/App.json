{
    "ID": "App",
    "layout": {
        "widget": "page",
        "children": [
            {
                "markdown": "<a target=\"expert\" href=\"/djcode/index.html\">Open Expert Mode</a>",
                "widget": "markdown"
            },
            {
                "text": "Pull",
                "print": "$gitPull()",
                "widget": "button"
            },
            {
                "expression": "$gitStatus().{\"type\":type, \"path\":path, \"diff\": diff}",
                "title": "Changes",
                "properties": {
                    "Revert": "(selected.$gitRestore(path); $refresh(); $notify(\"Ok\"))",
                    "Commit": "$gitCommit(\"change\", [selected.path])"
                },
                "widget": "actionTable"
            }
        ]
    }
}