{
    "ID": "App",
    "layout": {
        "widget": "page",
        "children": [
            {
                "text": "Pull",
                "print": "$gitPull()",
                "widget": "button"
            },
            {
                "expression": "$gitStatus().{\"type\":type, \"path\":path, \"diff\": diff}",
                "title": "Changes",
                "properties": {
                    "Revert": "(selected.$gitRestore(path); $refresh(); $notify(\"Ok\"))",
                    "Commit": "($message := $prompt(\"Enter commit message\"); $gitCommit($message, [selected.path]))"
                },
                "widget": "actionTable"
            }
        ]
    }
}