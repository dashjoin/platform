          "name": "ID",
          "parent": "dj/config/widget",
          "pkpos": 0,
          "type": "string",
          "createOnly": true
        },
        "layout": {
          "ID": "dj/config/widget/layout",
          "name": "layout",
          "parent": "dj/config/widget",
          "type": "object"
        }
      }
    },
    "page": {
      "ID": "dj/config/page",
      "name": "page",
      "parent": "dj/config",
      "type": "object",
      "required": [
        "ID"
      ],
      "instanceLayout": {
        "widget": "page",
        "children": [
          {
            "widget": "edit",
            "title": "Edit Page",
