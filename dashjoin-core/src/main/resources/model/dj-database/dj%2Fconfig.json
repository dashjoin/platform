        }
      }
    },
    "dj-function": {
      "ID": "dj/config/dj-function",
      "name": "dj-function",
      "parent": "dj/config",
      "type": "object",
      "required": [
        "ID"
      ],
      "properties": {
        "ID": {
          "ID": "dj/config/dj-function/ID",
          "name": "ID",
          "parent": "dj/config/dj-function",
          "pkpos": 0,
          "type": "string",
          "createOnly": true
        }
      },
      "tableLayout": {
        "widget": "page",
        "pageLayout": "1 column",
        "children": [
            {
              "widget": "container",
              "title": "Available Functions",
              "children": [{
                  "widget": "table",
                  "database": "config",
                  "query": "dj-functions"
                  }]
          },
          {
            "widget": "create",
            "title": "New Function"
          },
          {
            "widget": "text",
            "text": "Dashjoin Notebook",
            "href": "/page/Notebook",
            "icon": "edit_note"
          }
        ]
      },
      "instanceLayout": {
        "widget": "page",
        "children": [
          {
            "widget": "edit",
            "title": "Edit Record",
            "deleteConfirmation": "Are you sure you want to delete this function?"
          },
          {
            "widget": "container",
            "title": "Run Function",
            "children": [
              {
                "widget": "button",
                "print": "$call(pk1)"
              },
