          }
        ]
      },
      "tableLayout": {
        "widget": "page",
        "children": [
          {
            "widget": "table",
            "database": "config",
            "query": "dj-page-urls",
            "title": "Available Pages"
          },
          {
            "widget": "create",
            "title": "Create a New Page"
          },
          {
            "widget": "text",
