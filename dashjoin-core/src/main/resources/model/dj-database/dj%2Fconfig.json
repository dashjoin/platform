          },
          {
            "widget": "table",
            "database": "config",
            "query": "dj-layouts",
            "title": "Layouts"
          }
        ]
      },
      "properties": {
        "ID": {
          "ID": "dj/config/page/ID",
          "name": "ID",
          "parent": "dj/config/page",
          "pkpos": 0,
          "type": "string",
          "createOnly": true
        },
        "layout": {
          "ID": "dj/config/page/layout",
          "name": "layout",
          "parent": "dj/config/page",
