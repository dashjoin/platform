{
  "ID": "dj/config",
  "name": "config",
  "parent": "dj",
  "djClassName": "org.dashjoin.service.PojoDatabase",
  "readRoles": [
    "authenticated"
  ],
  "tables": {
    "Property": {
      "ID": "dj/config/Property",
      "name": "Property",
      "parent": "dj/config",
      "type": "object",
      "dj-label": "${title}",
      "before-create": "$alterColumnTrigger()",
      "before-update": "$alterColumnTrigger()",
      "before-delete": "$alterColumnTrigger()",
      "required": [
        "name",
        "type"
      ],
      "properties": {
        "ID": {
          "ID": "dj/config/Property/ID",
          "name": "ID",
          "parent": "dj/config/Property",
          "pkpos": 0,
          "type": "string",
          "readOnly": true
        },
        "name": {
          "ID": "dj/config/Property/name",
          "name": "name",
          "parent": "dj/config/Property",
          "type": "string"
        },
        "type": {
          "ID": "dj/config/Property/type",
          "name": "type",
          "parent": "dj/config/Property",
          "type": "string",
          "enum": [
            "boolean",
            "integer",
            "number",
            "string",
            "date"
          ],
          "title": "Datatype"
        },
        "comment": {
          "ID": "dj/config/Property/comment",
          "name": "comment",
          "parent": "dj/config/Property",
          "type": "string"
        },
        "title": {
          "ID": "dj/config/Property/title",
          "name": "title",
          "parent": "dj/config/Property",
          "type": "string"
        },
        "ref": {
          "ID": "dj/config/Property/ref",
          "name": "ref",
          "parent": "dj/config/Property",
          "ref": "dj/config/Property/ID",
          "displayWith": "fk",
          "type": "string",
          "style": {
            "width": "600px"
          },
          "title": "Foreign Key Reference"
        },
        "pkpos": {
          "ID": "dj/config/Property/pkpos",
          "name": "pkpos",
          "parent": "dj/config/Property",
          "type": "integer",
          "widget": "select",
          "choices": [
            null,
            0
          ],
          "displayWithChoices": [
            "---",
            "Primary Key"
          ],
          "title": "Key"
        }
      }
    },
    "Table": {
      "ID": "dj/config/Table",
      "name": "Table",
      "parent": "dj/config",
      "type": "object",
      "dj-label": "${title}",
      "before-create": "$alterTableTrigger()",
      "before-update": "$alterTableTrigger()",
      "before-delete": "$alterTableTrigger()",
      "instanceLayout": {
        "widget": "page",
        "children": [
          {
            "title": "Table: ${value.name}",
            "widget": "table"
          },
          {
            "title": "New Record",
            "widget": "create"
          },
          {
            "widget": "dj-table-metadata"
          }
        ]
      },
      "required": [
        "name"
      ],
      "layout": "vertical",
      "order": [
		  ["ID", "name", "dj-label"],
		  ["title", "comment"],
		  ["readRoles", "writeRoles"],
		  ["tenantColumn", "roleMappings"],
		  "before-create",
		  "after-create",
		  "before-update",
		  "after-update",
		  "before-delete",
		  "after-delete"
	  ],
      "properties": {
        "ID": {
          "ID": "dj/config/Table/ID",
          "name": "ID",
          "parent": "dj/config/Table",
          "pkpos": 0,
          "type": "string",
          "readOnly": true
        },
        "name": {
          "ID": "dj/config/Table/name",
          "name": "name",
          "parent": "dj/config/Table",
          "type": "string"
        },
        "dj-label": {
          "ID": "dj/config/Table/dj-label",
          "name": "dj-label",
          "parent": "dj/config/Table",
          "type": "string"
        },
        "comment": {
          "ID": "dj/config/Table/comment",
          "name": "comment",
          "parent": "dj/config/Table",
          "type": "string"
        },
        "title": {
          "ID": "dj/config/Table/title",
          "name": "title",
          "parent": "dj/config/Table",
          "type": "string"
        },
        "readRoles": {
          "ID": "dj/config/Table/readRoles",
          "name": "readRoles",
          "parent": "dj/config/Table",
          "type": "array",
          "choicesUrl": "/rest/database/all/config/dj-role",
          "jsonata": "ID",
          "layout": "select",
          "items": {
            "type": "string"
          }
        },
        "writeRoles": {
          "ID": "dj/config/Table/writeRoles",
          "name": "writeRoles",
          "parent": "dj/config/Table",
          "type": "array",
          "choicesUrl": "/rest/database/all/config/dj-role",
          "jsonata": "ID",
          "layout": "select",
          "items": {
            "type": "string"
          }
        },
        "tenantColumn": {
          "ID": "dj/config/Table/tenantColumn",
          "name": "tenantColumn",
          "parent": "dj/config/Table",
          "type": "string"
        },
        "roleMappings": {
          "ID": "dj/config/Table/roleMappings",
          "name": "roleMappings",
          "parent": "dj/config/Table",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "before-create": {
          "ID": "dj/config/Table/before-create",
          "name": "before-create",
          "parent": "dj/config/Table",
          "type": "string",
          "title": "Trigger to call before a new record is created",
          "widget": "custom",
          "widgetType": "expression"
        },
        "after-create": {
          "ID": "dj/config/Table/after-create",
          "name": "after-create",
          "parent": "dj/config/Table",
          "type": "string",
          "title": "Trigger to call after a new record is created",
          "widget": "custom",
          "widgetType": "expression"
        },
        "before-update": {
          "ID": "dj/config/Table/before-update",
          "name": "before-update",
          "parent": "dj/config/Table",
          "type": "string",
          "title": "Trigger to call before a new record is updated",
          "widget": "custom",
          "widgetType": "expression"
        },
        "after-update": {
          "ID": "dj/config/Table/after-update",
          "name": "after-update",
          "parent": "dj/config/Table",
          "type": "string",
          "title": "Trigger to call after a new record is updated",
          "widget": "custom",
          "widgetType": "expression"
        },
        "before-delete": {
          "ID": "dj/config/Table/before-delete",
          "name": "before-delete",
          "parent": "dj/config/Table",
          "type": "string",
          "title": "Trigger to call before a new record is deleted",
          "widget": "custom",
          "widgetType": "expression"
        },
        "after-delete": {
          "ID": "dj/config/Table/after-delete",
          "name": "after-delete",
          "parent": "dj/config/Table",
          "type": "string",
          "title": "Trigger to call after a new record is deleted",
          "widget": "custom",
          "widgetType": "expression"
        }
      }
    },
    "dj-database": {
      "ID": "dj/config/dj-database",
      "name": "dj-database",
      "parent": "dj/config",
      "type": "object",
      "tableLayout": {
        "widget": "page",
        "pageLayout": "1 column",
        "children": [
          {
            "widget": "table",
            "database": "config",
            "query": "dj-databases-no-config",
            "title": "Available Databases"
          },
          {
            "widget": "create",
            "text": "Connect",
            "title": "Connect a New Database"
          },
          {
            "widget": "card",
            "layout": "vertical",
            "title": "System Configuration",
            "children": [
              {
                "widget": "text",
                "href": "/table/config/dj-config",
                "icon": "build",
                "text": "System Configuration"
              },
              {
                "widget": "text",
                "href": "/resource/config/dj-database/dj%2Fconfig",
                "icon": "build_circle",
                "text": "Configuration Database"
              },
              {
                "widget": "text",
                "href": "/table/config/dj-query-performance",
                "icon": "speed",
                "text": "Query Performance"
              },
              {
                "widget": "text",
                "href": "/page/OpenAPI",
                "icon": "webhook",
                "text": "App API"
              },
              {
                "widget": "text",
                "href": "/page/ERDiagram",
                "icon": "schema",
                "text": "ER Diagram"
              }
            ]
          }
        ]
      },
      "instanceLayout": {
        "widget": "page",
        "children": [
          {
            "widget": "edit",
            "title": "Connection Information",
            "deleteConfirmation": "Are you sure you want to delete this database connection?"
          },
          {
            "widget": "links",
            "title": "Database Tables"
          },
          {
            "widget": "display",
            "title": "Database Information",
            "display": "{\"status\": value.status, \"tables\": $count($keys( value.tables ))}",
            "icons": {
              "status": "error_outline",
              "tables": "table_view"
            }
          },
          {
            "widget": "expansion",
            "text": "Database Management",
            "roles": [
              "admin"
            ],
            "children": [
              {
                "widget": "upload"
              },
              {
                "widget": "editRelated",
                "text": "Create Table",
                "prop": "dj/config/Table/parent",
                "deleteConfirmation": "You are deleting a table and all its data. This operation cannot be reverted!",
                "columns": [
                  "ID",
                  "comment",
                  "dj-label"
                ],
                "createSchema": {
                  "type": "object",
                  "required": [
                    "name"
                  ],
                  "properties": {
                    "name": {
                      "type": "string",
                      "title": "Name of the table to create"
                    }
                  }
                }
              }
            ]
          }
        ]
      },
      "properties": {
        "ID": {
          "ID": "dj/config/dj-database/ID",
          "name": "ID",
          "parent": "dj/config/dj-database",
          "pkpos": 0,
          "type": "string"
        },
        "name": {
          "ID": "dj/config/dj-database/name",
          "name": "name",
          "parent": "dj/config/dj-database",
          "type": "string"
        },
        "parent": {
          "ID": "dj/config/dj-database/parent",
          "name": "parent",
          "parent": "dj/config/dj-database",
          "ref": "dj/config/Dashjoin/ID",
          "type": "string"
        },
        "tables": {
          "ID": "dj/config/dj-database/tables",
          "layout": "tab",
          "readOnly": true,
          "name": "tables",
          "parent": "dj/config/dj-database",
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "properties": {
                "type": "object",
                "layout": "vertical",
                "readOnly": true,
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "pkpos": {
                      "type": "integer"
                    },
                    "ref": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "Dashjoin": {
      "ID": "dj/config/Dashjoin",
      "name": "Dashjoin",
      "parent": "dj/config",
      "type": "object",
      "required": [
        "ID"
      ],
      "properties": {
        "ID": {
          "ID": "dj/config/Dashjoin/ID",
          "name": "ID",
          "parent": "dj/config/Dashjoin",
          "pkpos": 0,
          "type": "string"
        },
        "url": {
          "ID": "dj/config/Dashjoin/url",
          "name": "url",
          "parent": "dj/config/Dashjoin",
          "type": "string"
        }
      }
    },
    "tenantusers": {
      "ID": "dj/config/tenantusers",
      "name": "tenantusers",
      "parent": "dj/config",
      "type": "object",
      "required": [
        "ID"
      ],
      "properties": {
        "ID": {
          "ID": "dj/config/tenantusers/ID",
          "name": "ID",
          "parent": "dj/config/tenantusers",
          "pkpos": 0,
          "createOnly": true,
          "type": "string"
        },
        "name": {
          "ID": "dj/config/tenantusers/name",
          "name": "name",
          "parent": "dj/config/tenantusers",
          "type": "string"
        },
        "comment": {
          "ID": "dj/config/tenantusers/comment",
          "name": "comment",
          "parent": "dj/config/tenantusers",
          "type": "string"
        },
        "active": {
          "ID": "dj/config/tenantusers/active",
          "name": "active",
          "parent": "dj/config/tenantusers",
          "type": "boolean"
        },
        "roles": {
          "ID": "dj/config/tenantusers/roles",
          "name": "roles",
          "parent": "dj/config/tenantusers",
          "layout": "select",
          "type": "array",
          "choicesUrl": "/rest/database/all/config/dj-role",
          "jsonata": "ID",
          "items": {
            "type": "string"
          }
        },
        "properties": {
          "ID": "dj/config/tenantusers/properties",
          "name": "properties",
          "parent": "dj/config/tenantusers",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "dj-config": {
      "ID": "dj/config/dj-config",
      "name": "dj-config",
      "parent": "dj/config",
      "type": "object",
      "required": [
        "ID"
      ],
      "tableLayout": {
        "widget": "page",
        "children": [
          {
            "widget": "table",
            "database": "config",
            "query": "dj-config-values",
            "title": "Configuration Settings"
          }
        ]
      },
      "switch": "type",
      "properties": {
        "ID": {
          "ID": "dj/config/dj-config/ID",
          "name": "ID",
          "parent": "dj/config/dj-config",
          "pkpos": 0,
          "type": "string",
          "readOnly": true
        },
        "description": {
          "ID": "dj/config/dj-config/description",
          "name": "description",
          "parent": "dj/config/dj-config",
          "type": "string"
		},
        "category": {
          "ID": "dj/config/dj-config/category",
          "name": "category",
          "parent": "dj/config/dj-config",
          "type": "string"
		},
        "boolean": {
          "ID": "dj/config/dj-config/boolean",
          "name": "boolean",
          "parent": "dj/config/dj-config",
          "type": "boolean",
          "case": [
            "boolean"
          ]
        },
        "integer": {
          "ID": "dj/config/dj-config/integer",
          "name": "integer",
          "parent": "dj/config/dj-config",
          "type": "integer",
          "case": [
            "integer"
          ]
        },
        "string": {
          "ID": "dj/config/dj-config/string",
          "name": "string",
          "parent": "dj/config/dj-config",
          "type": "string",
          "case": [
            "string"
          ]
        },
        "password": {
          "ID": "dj/config/dj-config/password",
          "name": "password",
          "parent": "dj/config/dj-config",
          "type": "string",
          "widget": "password",
          "case": [
            "password"
          ]
        },
        "map": {
          "ID": "dj/config/dj-config/map",
          "name": "map",
          "parent": "dj/config/dj-config",
          "type": "object",
          "layout": "vertical",
          "case": [
            "map"
          ],
          "additionalProperties": {
            "type": "string",
            "style": {
              "width": "400px"
            }
          }
        },
        "list": {
          "ID": "dj/config/dj-config/list",
          "name": "list",
          "parent": "dj/config/dj-config",
          "type": "array",
          "items": {
            "type": "string"
          },
          "layout": "vertical",
          "case": [
            "list"
          ]
        }
      }
    },
    "dj-query-catalog": {
      "ID": "dj/config/dj-query-catalog",
      "name": "dj-query-catalog",
      "parent": "dj/config",
      "type": "object",
      "widget": "custom",
      "widgetType": "query",
      "required": [
        "ID"
      ],
      "tableLayout": {
        "widget": "page",
        "children": [
          {
            "widget": "table",
            "database": "config",
            "query": "dj-queries",
            "title": "Available Queries"
          },
          {
            "widget": "create",
            "title": "New Query"
          }
        ]
      },
      "instanceLayout": {
        "widget": "page",
        "children": [
          {
            "widget": "edit",
            "title": "Edit Record",
            "deleteConfirmation": "Are you sure you want to delete this query?"
          },
          {
            "widget": "container",
            "text": "New Widget",
            "if": "value.type = \"write\"",
            "children": [
              {
                "widget": "button",
                "text": "Run Query",
                "print": "$query($substringAfter(value.database, '/'), pk1)"
              }
            ]
          }
        ]
      },
      "properties": {
        "ID": {
          "ID": "dj/config/dj-query-catalog/ID",
          "name": "ID",
          "parent": "dj/config/dj-query-catalog",
          "pkpos": 0,
          "type": "string",
	      "size": 4,
          "createOnly": true
        },
        "type": {
          "ID": "dj/config/dj-query-catalog/type",
          "name": "type",
          "parent": "dj/config/dj-query-catalog",
          "type": "string",
	      "size": 4,
          "enum": [
            "read",
            "write"
          ]
        },
        "database": {
          "ID": "dj/config/dj-query-catalog/database",
          "name": "database",
          "parent": "dj/config/dj-query-catalog",
          "type": "string",
          "ref": "dj/config/dj-database/ID",
	      "size": 4,
          "displayWith": "fk"
        },
        "query": {
          "ID": "dj/config/dj-query-catalog/query",
          "name": "query",
          "parent": "dj/config/dj-query-catalog",
          "type": "string",
          "widget": "textarea",
	      "widgetType": "queryEdit",
	      "size": 12,
          "style": {
		    "width": "calc(100vw - 100px - 240px)",
		    "font-family": "monospace"
		  }
        },
        "comment": {
          "ID": "dj/config/dj-query-catalog/comment",
          "name": "comment",
          "parent": "dj/config/dj-query-catalog",
	      "size": 8,
          "type": "string"
        },
        "roles": {
          "ID": "dj/config/dj-query-catalog/roles",
          "name": "roles",
          "parent": "dj/config/dj-query-catalog",
          "type": "array",
          "choicesUrl": "/rest/database/query/config/dj-roles-without-admin",
          "jsonata": "ID",
          "layout": "select",
	      "size": 4,
          "items": {
            "type": "string"
          }
        },
        "arguments": {
          "ID": "dj/config/dj-query-catalog/arguments",
          "name": "arguments",
          "parent": "dj/config/dj-query-catalog",
          "type": "object",
          "layout": "vertical",
	      "size": 12,
          "additionalProperties": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "boolean",
                  "integer",
                  "number",
                  "string",
                  "date"
                ]
              },
              "sample": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "widget": {
      "ID": "dj/config/widget",
      "name": "widget",
      "parent": "dj/config",
      "type": "object",
      "instanceLayout": {
        "widget": "page",
        "children": [
          {
            "title": "Edit Record",
